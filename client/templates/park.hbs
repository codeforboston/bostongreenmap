<div id="carousel-example-generic">
  <!-- Wrapper for slides -->
    <div class="center-content" style="position: relative">
        <!--this is where the toggle code was before moving it to header.hbs -->
    <div style="position:absolute; z-index:1000">
      <div class="floating-text">
        <div class="park-information">
          <div class="park-title row">
            <h1>{{name}}</h2> 
          </div>
          {{#if description}}
            <div class="park-description row">
              <p>{{description}}</p>
            </div>  
          {{/if}}
          <div class="park-activities row">
            {{#each activities}}
              <div class="park-activity icon icon-{{slug}}" data-toggle="tooltip" data-placement="bottom" title="{{name}}"></div>
            {{/each}}
          </div>
        </div>
      </div>  
    </div>
  </div>
  <div class="carousel-inner" id="carousel-images-container">
    {{#if images.0.default}}



    {{else}}
      {{#each images}}
        <div class="item">
          <div class="carousel-image" alt="...">
            <img class="lazyOwl" data-src="{{large_src}}"></img>
          </div>
          <div class="carousel-caption"></div>
        </div>
      {{/each}}
    {{/if}}
  </div>
</div>  

<div class="quick-facts">
  <div class="center-content">
    <h2>Quick Facts</h2>
  </div>
  <div id="orbs" class="owl-carousel orbs">
    {{#if area}}
      <div class="item circle"><span id="area">{{area}}</span> Acres</div>
    {{/if}}
    {{#if access}}
      <div class="item circle"><span id="acess">Public Access</span></div>
    {{/if}}
  </div>
</div> 
<div class="nearby-parks">
  <div class="center-content">
    <h2>Similar Parks</h2>
  </div>
  <div id="nearby" class="owl-carousel orbs">
    {{#each recommended_parks}}
      <div class="item">
      {{#if image.src}}
        <img src="{{image.src}}" alt={{owner}}>
      {{else}}
        <img src="http://placehold.it/300x200" alt={{owner}}>
      {{/if}}
        <p class="park-title"><a href="#{{url}}">{{name}}</a></p>
      </div>    
    {{/each}}
  </div>
</div> 
<div class="recommended-parks">
  <div class="center-content">
    <h2>Nearby Spaces</h2>
  </div>
  <div id="recommended" class="owl-carousel orbs">
    {{#each nearby_parks}}
      <div class="item">
        {{#if image.src}}
          <img src="{{image.src}}" alt={{owner}}>
        {{else}}
          <img src="http://placehold.it/300x200" alt={{owner}}>
        {{/if}}
        <p class="park-title"><a href="#{{url}}">{{name}}</a></p>
      </div>
    {{/each}}
  </div>
</div> 